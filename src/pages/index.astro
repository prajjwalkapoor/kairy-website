---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import LatestPosts from '~/components/blog/LatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <Hero
    callToAction={{
      text: 'Download Extension',
      href: '#',
      icon: 'tabler:download',
    }}
    callToAction2={{ text: 'Learn more', href: '#features' }}
  >
    <Fragment slot="title">
      A <span class="text-accent highlight"> Browser Extension</span> that can manage your bookmarks and shortcuts.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Kairy</span> is a free, all-in-one bookmarking tool for saving and organizing anything
        from the web with thematic collections, tags, custom filters, and sorting options and more.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    highlight="Features"
    title="What can you do with Kairy?"
    subtitle="With Kairy, you can save and organize anything from the web with thematic collections, tags, and filters, sort items, and protect your privacy by storing data locally. You can also easily import and export bookmarks."
    items={[
      [
        {
          title: 'Create Bookmark with One Click',
          description: 'Easily create bookmarks by directly clicking on the Kairy extension icon.',
          icon: 'mdi:bookmark-plus-outline',
        },
        {
          title: 'Organize with Categories and Tags',
          description: 'Manage bookmarks and reading lists by categories and tags for easy access and organization.',
          icon: 'mdi:folder-multiple-outline',
        },
        {
          title: 'Effortlessly Search Bookmarks',
          description: "Quickly search bookmarks and shortcuts using Kairy's easy search function.",
          icon: 'mdi:book-search-outline',
        },
      ],
      [
        {
          title: 'Protect Your Privacy',
          description:
            "Kairy doesn't store any of your data - all your bookmarks are stored on your own device for privacy and security.",
          icon: 'mdi:lock-outline',
        },
        {
          title: 'Easily Import and Export Bookmarks',
          description: 'Export and import bookmarks with just one click for easy sharing or backup.',
          icon: 'mdi:import-export',
        },
      ],
    ]}
  />

